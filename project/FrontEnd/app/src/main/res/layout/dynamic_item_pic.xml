<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/imageviewboundshape">

    <TextView
        android:id="@+id/dynamic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="标题"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/dynamic_detail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:lines="4"
        android:layout_margin="5dp"/>
    <com.w4lle.library.NineGridlayout
        android:id="@+id/grid_layout_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dynamic_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:text="时间"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/dynamic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:text="类型"
            android:textSize="16dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dynamic_position"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="位置"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/dynamic_delete"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:text="删除动态" />
    </RelativeLayout>
</LinearLayout>